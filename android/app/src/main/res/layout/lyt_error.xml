<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lytError"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:visibility="gone"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageError"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        tools:src="@drawable/ic_error"
        />
    <TextView
        android:id="@+id/txtError"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_wait_loading"
        android:textSize="@dimen/_10sdp"
        android:layout_gravity="center"
        android:autoSizeMaxTextSize="@dimen/_10sdp"
        android:autoSizeMinTextSize="10px"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        tools:text="Enable Location Access"
        android:maxLines="2"
        android:padding="@dimen/_2sdp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/txtErrorDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        tools:text="Allow access for weather updated"
        android:textSize="@dimen/_9sdp"
        android:layout_gravity="center"
        android:autoSizeMaxTextSize="@dimen/_10sdp"
        android:autoSizeMinTextSize="10px"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"

        android:maxLines="2"
        android:alpha="0.7"
        android:padding="@dimen/_4sdp"
        android:gravity="center"
        android:textColor="@color/white"
        />
</LinearLayout>